<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/infoPanel"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_gravity="center|bottom"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_white_recktangle"
    android:elevation="10dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="5dp"
    android:visibility="invisible">

    <!-- Alert info panel shown at the bottom of the screen when the user selects an Alert marker -->

    <TextView
        android:id="@+id/alert_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="top"
        android:singleLine="true"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alert_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:singleLine="true"
        android:textColor="#efab01"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/alert_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:paddingBottom="2dp"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/alert_authority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:singleLine="true"
        android:textColor="#2c9eb5"
        android:textSize="12sp" />


</LinearLayout>